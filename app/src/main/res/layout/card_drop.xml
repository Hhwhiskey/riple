<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardElevation="24dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="175dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Kevin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/profilePic"
                android:textAlignment="center"
                android:width="50dp"
                android:layout_toStartOf="@+id/dropTodo"
                android:layout_toLeftOf="@+id/dropTodo" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Hodges"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/firstName"
                android:layout_toRightOf="@+id/dropCommentCount"
                android:layout_toEndOf="@+id/dropCommentCount" />

            <TextView
                android:id="@+id/dropDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="September 18, 2015 @ 3:32 p.m."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_above="@+id/dropTitle"
                android:layout_toRightOf="@+id/profilePic"
                android:layout_toEndOf="@+id/profilePic"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dropTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/profilePic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:elegantTextHeight="true" />

            <TextView
                android:id="@+id/dropDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/dropTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="start"
                android:enabled="true"
                android:focusable="false"
                android:elegantTextHeight="false" />

            <TextView
                android:id="@+id/dropRipleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="205 riples"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:layout_below="@+id/dropDescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="8dp" />

            <TextView
                android:id="@+id/dropCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="12 comments"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:layout_alignTop="@+id/dropRipleCount"
                android:layout_toRightOf="@+id/dropRipleCount"
                android:layout_toEndOf="@+id/dropRipleCount" />

            <TextView
                android:id="@+id/dropTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Todo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:width="100dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/shareFB"
                android:layout_toStartOf="@+id/shareFB" />

            <TextView
                android:id="@+id/shareFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Share"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:width="100dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/dropTodo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center" />

