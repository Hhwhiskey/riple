<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_create_drop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/drop_tool_bar"
                layout="@layout/tool_bar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/to_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Create a new Drop"
                android:id="@+id/create_drop_header"
                android:textSize="18sp"
                android:gravity="left|center_horizontal"
                android:textStyle="bold|italic"
                android:layout_below="@+id/drop_tool_bar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"/>

            <AutoCompleteTextView
                android:id="@+id/drop_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:layout_below="@+id/create_drop_header"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"/>

            <AutoCompleteTextView
                android:id="@+id/drop_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:layout_below="@+id/drop_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop"
                android:id="@+id/button_post_drop"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/drop_description"
                android:layout_centerHorizontal="true"
                android:background="@color/ColorPrimary"
                android:textColor="#ffffff"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>