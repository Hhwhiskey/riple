<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.CompletedFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/completed_by_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/enter_comment_text"
        android:layout_below="@+id/completed_by_card"
        android:background="@color/Primary_Background_Color"
        />

    <TextView
        android:id="@+id/completed_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:visibility="visible"
        android:text="Nobody has completed this Drop yet. Why don't you be the first?"
        android:textSize="18sp"
        android:textStyle="italic"
        android:foregroundGravity="center"
        android:paddingBottom="200dp"
        android:textAlignment="center"
        android:layout_above="@+id/comment_post_profile_picture"/>

</FrameLayout>
