
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".activities.SettingsActivity"
                android:id="@+id/profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit your User Name..."
        android:id="@+id/edit_display_name_tv"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/display_name_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This is how others will see you..."
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/display_name_tv"
        android:textSize="30dp"
        android:layout_below="@+id/edit_profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:singleLine="true"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notifications"
            android:id="@+id/textView8"
            android:textSize="20sp"
            android:layout_below="@+id/edit_info_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView8"
            android:orientation="horizontal">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:id="@+id/switch1"
                android:checked="true"
                android:lines="1"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="72dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Challenges"
                android:id="@+id/switch2"
                android:checked="true"
                android:lines="1"
                android:layout_alignParentTop="false"
                android:layout_toRightOf="@+id/switch1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Riples"
                android:id="@+id/switch3"
                android:checked="true"
                android:lines="1"
                android:layout_below="@+id/switch1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/switch4"
                android:layout_toStartOf="@+id/switch4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="72dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Big Riples"
                android:id="@+id/switch4"
                android:checked="true"
                android:layout_alignTop="@+id/switch3"
                android:layout_alignLeft="@+id/switch2"
                android:layout_alignStart="@+id/switch2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
        </GridLayout>



    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:src="@drawable/ic_user_default"
        android:id="@+id/edit_profile_picture"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit your Info..."
        android:id="@+id/edit_info_tv"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:layout_below="@+id/edit_display_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
