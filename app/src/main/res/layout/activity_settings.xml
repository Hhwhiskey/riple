<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.khfire22gmail.riple.settings.SettingsActivity"
                android:id="@+id/profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="All About You"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change Your Profile Picture"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is how others will see you"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp">

            <com.facebook.login.widget.ProfilePictureView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edit_profile_picture"
                />

        </LinearLayout>





    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Your Riple Profile"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_user_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textCapSentences|textAutoComplete|textImeMultiLine|textAutoCorrect|text"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="16dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/userName_email_layout"
        android:layout_below="@+id/about_user_field">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit User Name"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Your Email"
        android:id="@+id/textView9"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="textEmailAddress|textCapSentences|textAutoComplete|textAutoCorrect|textMultiLine"
        android:layout_below="@+id/textView9"
        android:textSize="16dp"
        android:gravity="clip_horizontal"
        android:width="150dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:textIsSelectable="false"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_email_field"
            android:inputType="textCapSentences|textAutoComplete|textAutoCorrect|text"
            android:layout_below="@+id/textView7"
            android:width="200dp"
            android:layout_alignParentBottom="false"
            android:textSize="16dp"
            android:gravity="fill_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_toStartOf="@+id/editText"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_layout"
        android:layout_below="@+id/textView8"
        android:layout_alignParentBottom="true">

        <Button
        android:id="@+id/save_all_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textColor="#ffffff"
        android:background="@color/AccentColor"
        android:layout_weight="0.5"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/cancel_all_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="#ffffff"
            android:background="@color/AccentColor"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:width="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:id="@+id/switch3"
        android:checked="true"
        android:lines="1"
        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Drops"
            android:id="@+id/switch1"
            android:checked="true"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_alignRight="@+id/cancel_all_settings"
            android:layout_alignEnd="@+id/cancel_all_settings"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Big Riples"
            android:id="@+id/switch2"
            android:checked="true"
            android:lines="1"
            android:width="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/save_all_settings"
            android:layout_alignEnd="@+id/save_all_settings"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignLeft="@+id/save_all_settings"
            android:layout_alignStart="@+id/save_all_settings"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenges"
            android:id="@+id/switch4"
            android:checked="true"
            android:lines="1"
            android:layout_alignTop="@+id/switch3"
            android:layout_alignLeft="@+id/switch2"
            android:layout_alignStart="@+id/switch2"
            android:layout_alignRight="@+id/switch2"
            android:layout_alignEnd="@+id/switch2"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notifications"
        android:id="@+id/textView8"
        android:textSize="20sp"
        android:layout_below="@+id/userName_email_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>


</RelativeLayout>
