<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dropView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/trickleProfilePic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/trickleTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Wash your eldery neighbors car for them"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/trickleProfilePic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trickleUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Kevin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/trickleProfilePic"
        android:textAlignment="center"
        android:width="50dp"
        android:layout_toStartOf="@+id/trickleTodo"
        android:layout_toLeftOf="@+id/trickleTodo" />

    <!--<ImageView
        android:id="@+id/dropPic"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:padding="8dp"
        android:layout_below="@+id/dropRipleCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/shareFB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->

    <TextView
        android:id="@+id/trickleRipleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="205 riples"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/trickleDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/trickleCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="12 comments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/trickleRipleCount"
        android:layout_toRightOf="@+id/trickleProfilePic"
        android:layout_toEndOf="@+id/trickleProfilePic"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/trickleDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Blah blah blah"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/trickleTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/trickleShareFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Share"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/trickleTodo"
        android:layout_toRightOf="@+id/trickleTodo"
        android:width="110dp" />

    <!--<TextView
        android:id="@+id/postComment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Write a comment..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />-->

    <TextView
        android:id="@+id/lastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Hodges"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:layout_above="@+id/trickleTime"
        android:layout_toRightOf="@+id/trickleUserName"
        android:layout_toEndOf="@+id/trickleUserName" />

    <TextView
        android:id="@+id/trickleTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Todo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:width="110dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/trickleCommentCount"
        android:layout_toRightOf="@+id/trickleCommentCount"
        android:layout_toEndOf="@+id/trickleCommentCount" />

    <TextView
        android:id="@+id/trickleTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="September 18, 2015 @ 3:32 p.m."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/trickleTitle"
        android:layout_toRightOf="@+id/trickleProfilePic"
        android:layout_toEndOf="@+id/trickleProfilePic"
        android:textSize="10dp" />

    <!--<TextView
        android:id="@+id/nameView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameView1"
        android:layout_toEndOf="@+id/nameView1"
        android:layout_toRightOf="@+id/nameView1"
        android:padding="4dp"
        android:text="LastName"
        android:textAppearance="?android:attr/textAppearanceMedium" />-->


</RelativeLayout>