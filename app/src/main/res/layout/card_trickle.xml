<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_trickle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF"
        >

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:alpha="123124"
            android:background="@drawable/custom_bg">

            <android.support.v7.widget.Toolbar
                android:id="@+id/trickle_card_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#BBDEFB"
                />

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default"
                android:background="@drawable/custom_bg"
                android:clickable="true"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/profile_picture"
                android:width="50dp"
                android:text="Kevin Hodges"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textColor="#000000"
                android:singleLine="true"
                android:layout_alignTop="@+id/profile_picture"
                android:background="@drawable/custom_bg"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/imageView"
                android:layout_toLeftOf="@+id/imageView"/>

            <TextView
                android:id="@+id/created_at"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="September 18, 2015 @ 3:32 p.m."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:singleLine="true"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/profile_picture"
                android:layout_toEndOf="@+id/profile_picture"
                android:layout_marginLeft="8dp"
                android:background="@drawable/custom_bg"
                android:clickable="true"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/created_at"
                android:layout_alignRight="@+id/created_at"
                android:elegantTextHeight="false"
                android:ellipsize="end"
                android:enabled="true"
                android:focusable="false"
                android:maxLines="5"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="false"
                android:text="Description"
                android:layout_below="@+id/profile_picture"
                android:textColor="@color/PrimaryText"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/custom_bg"
                android:clickable="true"/>

            <TextView
                android:id="@+id/riple_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="205 riples"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:gravity="left|bottom"
                android:layout_toLeftOf="@+id/comment_count"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_alignBottom="@+id/button_todo"
                android:layout_marginBottom="6dp"
                android:background="@drawable/custom_bg"
                android:clickable="true"
                android:layout_below="@+id/description"/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 comments"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:layout_alignLeft="@+id/created_at"
                android:layout_alignStart="@+id/created_at"
                android:gravity="left|bottom"
                android:layout_alignBottom="@+id/button_todo"
                android:layout_marginBottom="6dp"
                android:background="@drawable/custom_bg"
                android:clickable="true"
                android:layout_alignTop="@+id/riple_count"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="TODO"
                android:id="@+id/button_todo"
                android:layout_below="@+id/description"
                android:layout_alignRight="@+id/description"
                android:layout_alignEnd="@+id/description"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@color/AccentColor"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:minHeight="32dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignRight="@+id/created_at"
                android:layout_alignEnd="@+id/created_at"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/menu_svg"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/trickle_card_tool_bar"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>