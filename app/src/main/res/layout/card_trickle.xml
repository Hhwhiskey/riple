<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="200dp
            "
            android:background="#ffffff">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/trickleProfilePic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center_vertical"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/trickleUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/trickleProfilePic"
                android:layout_toStartOf="@+id/trickleTodo"
                android:width="50dp"
                android:padding="8dp"
                android:text="Kevin Hodges"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/trickleTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="September 18, 2015 @ 3:32 p.m."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10dp"
                android:layout_below="@+id/trickleUserName"
                android:layout_toRightOf="@+id/trickleProfilePic"
                android:layout_toEndOf="@+id/trickleProfilePic"/>

            <TextView
                android:id="@+id/trickleTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/trickleProfilePic"
                android:elegantTextHeight="false"
                android:padding="8dp"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:ellipsize="start"/>

            <TextView
                android:id="@+id/trickleDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elegantTextHeight="false"
                android:ellipsize="start"
                android:enabled="true"
                android:focusable="false"
                android:padding="8dp"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/trickleTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/trickleRipleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="205 riples"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/trickleTodo"
                android:layout_alignBottom="@+id/trickleTodo"
                android:layout_toLeftOf="@+id/trickleTime"
                android:layout_toStartOf="@+id/trickleTime"/>

            <TextView
                android:id="@+id/trickleCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="12 comments"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:paddingRight="8dp"
                android:layout_alignBaseline="@+id/trickleRipleCount"
                android:layout_alignBottom="@+id/trickleRipleCount"
                android:layout_toLeftOf="@+id/trickleTodo"
                android:layout_toStartOf="@+id/trickleTodo"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>

            <Button
                android:id="@+id/trickleTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="25dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="Riple"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/trickleShareFB"
                android:layout_toStartOf="@+id/trickleShareFB"/>

            <Button
                android:id="@+id/trickleShareFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/trickleTodo"
                android:width="25dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="Share"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

