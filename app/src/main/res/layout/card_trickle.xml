<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_trickle"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <!--<ImageButton
                android:id="@+id/ib"
                android:src="@drawable/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/profile_picture"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/created_at"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/created_at"
                android:layout_toRightOf="@+id/profile_picture"
                android:layout_toStartOf="@+id/riple_button"
                android:width="50dp"
                android:padding="8dp"
                android:text="Kevin Hodges"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/created_at"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile_picture"
                android:layout_alignLeft="@+id/comment_count"
                android:layout_alignStart="@+id/comment_count"
                android:gravity="top"
                android:padding="8dp"
                android:text="September 18, 2015 @ 3:32 p.m."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/created_at"
                android:layout_alignRight="@+id/created_at"
                android:layout_below="@+id/profile_picture"
                android:elegantTextHeight="false"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/created_at"
                android:layout_alignRight="@+id/created_at"
                android:layout_below="@+id/title"
                android:elegantTextHeight="false"
                android:ellipsize="end"
                android:enabled="true"
                android:focusable="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/riple_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/description"
                android:layout_toLeftOf="@+id/comment_count"
                android:layout_toStartOf="@+id/comment_count"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:text="205 riples"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_toLeftOf="@+id/riple_button"
                android:layout_toRightOf="@+id/profile_picture"
                android:layout_toStartOf="@+id/riple_button"
                android:gravity="center"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:text="12 comments"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/riple_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/riple_count"
                android:layout_below="@+id/description"
                android:layout_toLeftOf="@+id/share_button"
                android:layout_toStartOf="@+id/share_button"
                android:width="25dp"
                android:background="#ffffff"
                android:gravity="top|center_horizontal"
                android:padding="4dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:text="Riple"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/riple_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/description"
                android:width="25dp"
                android:background="#ffffff"
                android:gravity="top|center_horizontal"
                android:padding="4dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:text="Share"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>