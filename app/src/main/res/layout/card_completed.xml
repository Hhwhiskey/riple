<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_created"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="8dp"
            android:alpha="123124">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/profile_picture"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/created_at"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/created_at"
                android:layout_toRightOf="@+id/profile_picture"
                android:width="50dp"
                android:text="Name"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textColor="@color/PrimaryText"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:layout_alignTop="@+id/profile_picture"/>

            <TextView
                android:id="@+id/created_at"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="September 18, 2015 @ 3:32 p.m."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:singleLine="true"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/profile_picture"
                android:layout_toEndOf="@+id/profile_picture"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/created_at"
                android:layout_alignRight="@+id/created_at"
                android:elegantTextHeight="false"
                android:ellipsize="end"
                android:enabled="true"
                android:focusable="false"
                android:maxLines="5"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="false"
                android:text="Description"
                android:layout_below="@+id/profile_picture"
                android:textColor="@color/PrimaryText"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/riple_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:text="205 riples"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="textStart"
                android:gravity="left"
                android:layout_toLeftOf="@+id/comment_count"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 comments"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:layout_alignTop="@+id/riple_count"
                android:layout_alignLeft="@+id/created_at"
                android:layout_alignStart="@+id/created_at"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                />

            <ImageView
                android:id="@+id/share_button"
                android:src="@mipmap/ic_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_alignBottom="@+id/drop_completed"
                android:layout_toLeftOf="@+id/drop_completed"
                android:layout_toStartOf="@+id/drop_completed"
                android:layout_below="@+id/description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drop_completed"
                android:checked="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/description"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="20dp"
                android:text="Riple'd"
                android:textColor="@color/PrimaryText"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>