<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg">

            <ImageView
                android:id="@+id/completed_by_profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:foregroundGravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default"
                android:layout_alignParentBottom="false"/>

            <TextView
                android:id="@+id/completed_by_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:width="50dp"
                android:text="Kevin Hodges"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:layout_alignTop="@+id/completed_by_profile_picture"
                android:layout_toRightOf="@+id/completed_by_profile_picture"
                android:layout_marginLeft="8dp"
                android:textStyle="italic"
                android:layout_alignRight="@+id/completed_by_riple_rank"
                android:layout_alignEnd="@+id/completed_by_riple_rank"
                android:gravity="center_horizontal"
                android:layout_above="@+id/completed_by_riple_rank"/>

            <TextView
                android:id="@+id/completed_by_riple_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:text="&quot;Saint&quot; with 2500 Riples"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:layout_alignBottom="@+id/completed_by_profile_picture"
                android:layout_alignParentBottom="false"
                android:gravity="bottom|center_horizontal"
                android:textStyle="italic"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/completed_by_profile_picture"
                android:layout_toEndOf="@+id/completed_by_profile_picture"
                android:layout_marginLeft="8dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>