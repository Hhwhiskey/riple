<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khfire22gmail.riple" >

    <!-- TODO Update permissions for Marshmallow http://guides.codepath.com/android/Understanding-App-Permissions#runtime-permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- <uses-permission android:author="android.Permission.PUBLIC_PROFILE"/> -->
    <application
        android:name=".application.RipleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider7286154005287291649797728595501"
            android:exported="true" />

        <activity
            android:name=".settings.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".utils.Logout"
            android:label="@string/title_activity_logout"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actions.CreateDropActivity"
            android:label="@string/title_activity_create_drop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actions.ViewDropActivity"
            android:label="@string/title_activity_clicked_drop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actions.ViewUserActivity"
            android:label="@string/title_activity_view_riple"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".sinch.MessagingActivity"
            android:label="@string/title_activity_messaging" >
        </activity>
        <activity
            android:name=".ParseLoginActivity"
            android:label="@string/title_activity_parse_login_activity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_edit_profile"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actions.ViewUserInfoActivity"
            android:label="@string/title_activity_view_user_info"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
